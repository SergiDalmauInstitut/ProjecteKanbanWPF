<Window x:Class="ProjecteKanbanWPF.FinestraEditarTasca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF"
        mc:Ignorable="d"
        Title="{Binding RelativeSource={RelativeSource Self}, Path=Title}" Height="750" Width="800">

    <Window.Resources>

        <Style x:Key="RoundedTextBox" TargetType="TextBox">
            <Setter Property="Margin" Value="0 0 0 20"/>
            <Setter Property="Height" Value="35"/>
            <Setter Property="BorderBrush" Value="#CCC"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border CornerRadius="10"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Border Background="#F2F2F2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0">
                <StackPanel Width="350">

                    <TextBlock Text="Detalls de la tasca"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0 0 0 25"/>

                    <TextBlock Text="Nom" FontSize="14" Margin="4 0 0 10"/>
                    <TextBox Text="{Binding Nom}"/>

                    <TextBlock Text="Prioritat" FontSize="14" Margin="4 0 0 10"/>
                    <TextBox Text="{Binding Prioritat}" Style="{StaticResource RoundedTextBox}"/>

                    <TextBlock Text="Descripció" FontSize="14" Margin="4 0 0 10"/>
                    <TextBox Text="{Binding Descripcio}"
                             Height="90"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top"
                             Style="{StaticResource RoundedTextBox}"/>

                    <TextBlock Text="Etiquetes" FontSize="14" Margin="4 0 0 10"/>
                    <TextBox Text="{Binding Etiquetes}" Style="{StaticResource RoundedTextBox}"/>

                    <TextBlock Text="Data Començament" FontSize="14" Margin="4 0 0 10"/>
                    <DatePicker Height="35"
                                SelectedDate="{Binding DataInici}"
                                Margin="0 0 0 20"
                                VerticalContentAlignment="Center">
                        <DatePicker.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                                <Setter Property="Padding" Value="5"></Setter>
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                    <TextBlock Text="Data Finalització" FontSize="14" Margin="4 0 0 10"/>
                    <DatePicker Height="35"
                                SelectedDate="{Binding DataFi}"
                                Margin="0 0 2 20"
                                VerticalContentAlignment="Center">
                        <DatePicker.Resources>
                            <Style TargetType="Border">
                                <Setter Property="CornerRadius" Value="10"></Setter>
                                <Setter Property="Padding" Value="5"></Setter>
                                <Setter Property="LayoutTransform">
                                    <Setter.Value>
                                        <TransformGroup>
                                            <ScaleTransform ScaleX="1.2" ScaleY="1.2"/>
                                            <SkewTransform/>
                                            <RotateTransform/>
                                            <TranslateTransform/>
                                        </TransformGroup>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </DatePicker.Resources>
                    </DatePicker>

                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Left"
                    Margin="0 10 0 0"
                    Content="Eliminar"
                    FontSize="18"
                    Background="#FF0000"
                    Foreground="White"
                    Click="Eliminar_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>

            <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0"
                    Content="Acceptar"
                    FontSize="18"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="Afegir_Click">
                <Button.Resources>
                    <Style TargetType="Border">
                        <Setter Property="CornerRadius" Value="10"/>
                    </Style>
                </Button.Resources>
            </Button>
        </Grid>
    </Border>
</Window>