<Window x:Class="ProjecteKanbanWPF.Windows.FinestraCanviContrasenya"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF.Windows"
        mc:Ignorable="d"
        
        Title="FinestraContrasenya" Height="550" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Margin=" 20 20 20 20">
            <TextBlock Text="Has oblidat la contrasenya?" FontSize="28" FontWeight="Bold" Margin="0 20 0 25"/>

            <TextBlock Text="Usuari" FontSize="14" Margin="4 0 0 2"/>
            <TextBox Text="{Binding Usuari}"/>

            <TextBlock Text="Correu" FontSize="14" Margin="4 5 0 2"/>
            <TextBox Text="{Binding Correu}"/>

            <TextBlock Text="Contrasenya Antiga" FontSize="14" Margin="4 5 0 2"/>
            <PasswordBox x:Name="PasswordAntiga"/>

            <TextBlock Text="Contrasenya Nova" FontSize="14" Margin="4 5 0 2"/>
            <PasswordBox x:Name="PasswordNova"/>

        </StackPanel>
        
        <StackPanel Orientation="Horizontal" Margin="75 250 0 0">

            <Button Name="LoginBtn"
             Grid.Row="1"
             Width="120"
             Height="40"
             HorizontalAlignment="Left"
             Margin="0 10 30 0"
             Content="Cancelar"
             FontSize="18"
             Foreground="White"
             Click="Canviar_Click"
             Background="#FF0000"/>

            <Button Name="RegisterBtn"
             Grid.Row="1"
             Width="120"
             Height="40"
             HorizontalAlignment="Left"
             Margin="80 10 0 0"
             Content="Cambiar"
             FontSize="18"
             Foreground="White"
             Click="Cancelar_Click"
             Background="#4CAF50"/>
            
        </StackPanel>
    </Grid>
</Window>
