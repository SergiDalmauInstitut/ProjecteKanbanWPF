<UserControl x:Class="ProjecteKanbanWPF.Windows.ProjecteVisual"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Margin="0,0,0,10">

    <Border Background="#E0E0E0" BorderBrush="#C0C0C0" BorderThickness="1" CornerRadius="5">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Text="{Binding Name}" FontWeight="Bold" FontSize="16" Margin="0,0,0,5"/>

            <TextBlock Grid.Row="1" Text="{Binding Description}" FontSize="14" Margin="0,0,0,10" TextWrapping="Wrap"/>

            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Entrar" Width="100" Height="30" Click="EntrarProjecte_Click" Margin="0,0,10,0"/>
                <Button Content="Eliminar" Width="100" Height="30" Click="EliminarProjecte_Click"/>
            </StackPanel>
        </Grid>
    </Border>
</UserControl>