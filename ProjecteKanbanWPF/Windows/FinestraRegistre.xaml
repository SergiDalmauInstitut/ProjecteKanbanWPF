<Window x:Class="ProjecteKanbanWPF.Windows.FinestraRegistre"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF.Windows"
        mc:Ignorable="d"
        Title="FinestraRegistre" Height="600" Width="500">

    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Width="350">
            <TextBlock Text="Registre" FontSize="28" FontWeight="Bold" Margin="0 30 0 25"/>
            <TextBlock Text="Nom" FontSize="14" Margin="4 0 0 2"/>
            <TextBox Text="{Binding Name}" Name="NameBox"/>

            <TextBlock Text="Cognom" FontSize="14" Margin="4 5 0 2"/>      
            <TextBox Text="{Binding LastName}" Name="LastNameBox"/>

            <TextBlock Text="Aniversari" FontSize="14" Margin="4 5 0 2"/>
            <DatePicker Height="35" SelectedDate="{Binding Birthday}" VerticalContentAlignment="Center" FontSize="14" Name="BirthdayPicker"/>

            <TextBlock Text="Rol" FontSize="14" Margin="4 5 0 2"/>
            <TextBox Text="{Binding Role}" Name="RoleBox"/>
            
            <TextBlock Text="Correu" FontSize="14" Margin="4 5 0 2"/>
            <TextBox Text="{Binding Email}" Name="MailBox"/>

            <TextBlock Text="Contrasenya" FontSize="14" Margin="4 5 0 2"/>
            <PasswordBox Name="PasswordBox"/>
            
        </StackPanel>
    <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Right"
                    Margin="0 10 75 50"
                    Content="Acceptar"
                    FontSize="18"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="Acceptar_Click"/>
        <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Left"
                    Margin="75 10 0 50"
                    Content="Cancelar"
                    FontSize="18"
                    Background="#FF0000"
                    Foreground="White"
                    Click="Cancelar_Click"/>
    </Grid>
</Window>
