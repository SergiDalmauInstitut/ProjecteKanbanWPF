<Window x:Class="ProjecteKanbanWPF.Windows.FinestraLogin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF"
        mc:Ignorable="d"
        Title="Login" Height="450" Width="450">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
        </Grid.RowDefinitions>
        <StackPanel Width="350">
            <TextBlock Text="Login"
            FontSize="28"
            FontWeight="Bold"
            Margin="0 50 0 25"/>

            <TextBlock Text="Nom" FontSize="18" Margin="4 0 0 10"/>
            <TextBox x:Name="txtBox" Margin=" 0 0 0 10"/>

            <TextBlock Text="Contrasenya" FontSize="18" Margin="4 0 0 10"/>
            <PasswordBox x:Name="PasswordBox" Margin="0 0 0 5"/>
            
            <TextBlock Text=" Has oblidat la contrasenya?" HorizontalAlignment="Left" FontSize="10" Margin="4 5 0 10" MouseDown="TextBlock_MouseDown" MouseEnter="TextBlock_MouseEnter" MouseLeave="TextBlock_MouseLeave" Cursor="Hand"/>
            <StackPanel Orientation="Horizontal" Margin=" 20 0 0 0">
                
                <Button Name="LoginBtn"
                        Grid.Row="1"
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Left"
                        Margin="0 10 30 0"
                        Content="Login"
                        FontSize="18"
                        Foreground="White"
                        Click="Login_Click"
                        Background="#4CAF50"/>
            
                <Button Name="RegisterBtn"
                        Grid.Row="1"
                        Width="120"
                        Height="40"
                        HorizontalAlignment="Left"
                        Margin="30 10 0 0"
                        Content="Register"
                        FontSize="18"
                        Foreground="White"
                        Click="Register_Click"
                        Background="#4CAF50"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>