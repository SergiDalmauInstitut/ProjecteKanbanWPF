<Window x:Class="ProjecteKanbanWPF.Windows.FinestraProjectes"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF"
        mc:Ignorable="d"
        Margin="0,5"
        Title="Projectes"
        MaxWidth="600"
        MaxHeight="500">

    <ScrollViewer>
        <DockPanel Margin="10">
            <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Stretch" Margin="0,0,0,10">
                <StackPanel>
                    <TextBlock Text="Projectes" FontSize="28" FontWeight="Bold"/>
                    <TextBlock Text="Tots els projectes" FontSize="14"/>
                </StackPanel>
                <Button Content="Nou Projecte" Width="120" Height="35" HorizontalAlignment="Right" Margin=" 300 0 0 0 " Click="NouProjecte_Click"/>
            </StackPanel>

            <ItemsControl x:Name="ProjectesList" ItemsSource="{Binding Projectes}">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <StackPanel Background="#E0E0E0" Margin="0,0,0,10">
                            <TextBlock Text="{Binding Titol}" FontWeight="Bold" FontSize="16" Margin=" 5 0 0 0"/>
                            <TextBlock Text="{Binding Descripcio}" FontSize="14" Margin="5 5 0 10"/>
                            <Button Content="Entrar" Width="100" Height="30" Click="EntrarProjecte_Click" Margin=" 5 5 5 5 "/>
                        </StackPanel>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </DockPanel>
    </ScrollViewer>
</Window>