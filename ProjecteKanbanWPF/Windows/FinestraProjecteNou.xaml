<Window x:Class="ProjecteKanbanWPF.Windows.FinestraProjecteNou"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF.Windows"
        mc:Ignorable="d"
        Title="FinestraProjecteNou" Height="450" Width="500">
    <Grid Background="#F2F2F2">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Width="350" HorizontalAlignment="Center">
            <TextBlock Text="Nou Projecte"
                       FontSize="28"
                       FontWeight="Bold"
                       Margin="0 30 0 25"/>

            <TextBlock Text="Títol"
                       FontSize="14"
                       Margin="4 0 0 2"/>

            <TextBox Height="35"
                     FontSize="14"
                     BorderThickness="0"
                     Background="#E0E0E0"
                     Text="{Binding Titol}"/>

            <TextBlock Text="Descripció"
                       FontSize="14"
                       Margin="4 15 0 2"/>

            <TextBox Height="80"
                     FontSize="14"
                     TextWrapping="Wrap"
                     AcceptsReturn="True"
                     BorderThickness="0"
                     Background="#E0E0E0"
                     Text="{Binding Descripcio}"/>
        </StackPanel>

        <Button Grid.Row="1"
                Width="120"
                Height="40"
                HorizontalAlignment="Right"
                Margin="0 10 75 50"
                Content="Acceptar"
                FontSize="18"
                Background="#4CAF50"
                Foreground="White"
                Click="Acceptar_Click"/>
    </Grid>
</Window>
