<Window x:Class="ProjecteKanbanWPF.Windows.FinestraEditarTasca"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjecteKanbanWPF"
        mc:Ignorable="d"
        Title="{Binding RelativeSource={RelativeSource Self}, Path=Title}" Height="600" Width="500">

    <Border Background="#F2F2F2" Padding="20">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <ScrollViewer Grid.Row="0">
                <StackPanel Width="350">

                    <TextBlock Text="Detalls de la tasca"
                               FontSize="28"
                               FontWeight="Bold"
                               Margin="0 0 0 25"/>

                    <TextBlock Text="Nom" FontSize="14" Margin="4 0 0 2"/>
                    <TextBox Text="{Binding Name}"/>

                    <TextBlock Text="Prioritat" FontSize="14" Margin="4 5 0 2"/>
                    <TextBox Text="{Binding Priority}"/>

                    <TextBlock Text="Descripció" FontSize="14" Margin="4 5 0 2"/>
                    <TextBox Text="{Binding Description}"
                             Height="90"
                             AcceptsReturn="True"
                             TextWrapping="Wrap"
                             VerticalContentAlignment="Top"/>

                    <TextBlock Text="Responsable" FontSize="14" Margin="4 5 0 2"/>
                    <ComboBox Height="35"
                              ItemsSource="{Binding AvailableUsers}"
                              DisplayMemberPath="Name"
                              SelectedValuePath="Id"
                              SelectedValue="{Binding IdResponsible}"/>

                    <TextBlock Text="Data Començament" FontSize="14" Margin="4 5 0 2"/>
                    <DatePicker Height="35"
                                 SelectedDate="{Binding StartDate}"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"/>

                    <TextBlock Text="Data Finalització" FontSize="14" Margin="4 5 0 2"/>
                    <DatePicker Height="35"
                                 SelectedDate="{Binding EndDate}"
                                 VerticalContentAlignment="Center"
                                 FontSize="14"/>
                </StackPanel>
            </ScrollViewer>

            <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Left"
                    Margin="0 10 0 0"
                    Content="Eliminar"
                    FontSize="18"
                    Background="#FF0000"
                    Foreground="White"
                    Click="Eliminar_Click"/>

            <Button Grid.Row="1"
                    Width="120"
                    Height="40"
                    HorizontalAlignment="Right"
                    Margin="0 10 0 0"
                    Content="Acceptar"
                    FontSize="18"
                    Background="#4CAF50"
                    Foreground="White"
                    Click="Afegir_Click"/>
        </Grid>
    </Border>
</Window>